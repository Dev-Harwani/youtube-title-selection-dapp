generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int    @id @default(autoincrement())
  address String @unique
  tasks   Task[]
}

model Worker {
  id          Int          @id @default(autoincrement())
  address     String       @unique
  balance     String
  submissions Submission[]
}

